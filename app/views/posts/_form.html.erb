<%= render 'shared/errors', obj: @post %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |checkbox| %>
    <% checkbox.label(class: "checkbox inline") {checkbox.check_box(class: "checkbox") + checkbox.text} %>
  <% end %>
  <br>
  <%= f.submit(@post.new_record? ? 'Create Post' : 'Edit Post', class: 'btn btn-primary') %>
<% end %>