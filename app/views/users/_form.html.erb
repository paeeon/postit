<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.submit(@user.new_record? ? 'Create User' : 'Edit Profile', class: 'btn btn-primary') %>
<% end %>